# ==============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================

# Database Configuration
# Ganti dengan kredensial production database
DB_HOST=localhost
DB_NAME=it_asset_management_prod
DB_USER=prod_user
DB_PASS=YOUR_SECURE_PASSWORD_HERE
DB_PORT=3306

# JWT Secrets (WAJIB diganti dengan secret yang aman!)
# Generate dengan: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
ACCESS_TOKEN_SECRET=GANTI_DENGAN_RANDOM_SECRET_64_BYTES
REFRESH_TOKEN_SECRET=GANTI_DENGAN_RANDOM_SECRET_64_BYTES_BERBEDA

# Server Configuration
PORT=5000
NODE_ENV=production

# Frontend URL (untuk CORS)
# Ganti dengan domain production
CLIENT_URL=https://yourdomain.com

# SSL Configuration (jika menggunakan SSL langsung di Node)
# SSL_KEY_PATH=/path/to/private.key
# SSL_CERT_PATH=/path/to/certificate.crt

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session/Cookie
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict
